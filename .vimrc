" Set the color theme for vim
color delek
" make vim work more vim-like
set nocompatible
" enable syntax highlighting
syntax on
" enable search highlighting
set hlsearch
" enable syntax highlighting on
syntax on
set colorcolumn=80
" always show status
set laststatus=2
" set titlebar
set title
" set tabs
set autoindent
set smartindent
set tabstop=4
set softtabstop=4
set shiftwidth=4
set expandtab
set smarttab
set cindent
set showmatch
set matchtime=1
